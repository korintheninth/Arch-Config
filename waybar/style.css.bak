@import 'colors.css';
@define-color backgroundlight #FFFFFF;
@define-color backgrounddark #FFFFFF;
@define-color workspacesbackground1 #FFFFFF;
@define-color workspacesbackground2 #CCCCCC;
@define-color bordercolor #FFFFFF;
@define-color textcolor shade(@primary_container, 0.5);
@define-color textcolor1 shade(@primary_container, 0.5);
@define-color textcolor2 shade(@primary_container, 0.5);
@define-color textcolor3 #FFFFFF;
@define-color iconcolor shade(@primary_container, 0.5);

/* -----------------------------------------------------
 * General
 * ----------------------------------------------------- */

* {
    font-family: "Fira Sans Semibold", "Font Awesome 7 Free", "Font Awesome 7 Brands", "Font Awesome 6 Free", "Font Awesome 6 Brands", FontAwesome, Roboto, Helvetica, Arial, sans-serif;
    border: none;
    border-radius: 0px;
}

window#waybar {
    background-color: rgba(0,0,0,0);
    border-bottom: 0px solid #ffffff;
    transition-property: background-color;
}

@keyframes rainbow {
  to {
  border-image-source: linear-gradient(450deg, @primary, @source_color, @secondary, @tertiary, @secondary_fixed_dim);
  }
}

.modules-left {
  padding-left: 10px;
  background-color: @source_color;
  border-radius: 0px;
  border-style: double;
  border-width: 2px;
  margin-bottom: 4px;
  margin-top: 3px;
  margin-left: 5px;
  box-shadow: 0px 0px 3px 2px shade(@source_color, 0.55);
  border-image-slice: 1;
  border-image-source: linear-gradient(90deg, @primary, @source_color, @secondary, @tertiary, @secondary_fixed_dim);
  animation: rainbow 20s linear infinite;
}

.modules-center {
  background-color: @source_color;
  border-radius: 0px;
  border-style: double;
  border-width: 2px;
  margin-bottom: 4px;
  margin-top: 3px;
  box-shadow: 0px 0px 3px 2px shade(@source_color, 0.55);
  border-image-slice: 1;
  border-image-source: linear-gradient(90deg, @primary, @source_color, @secondary, @tertiary, @secondary_fixed_dim);
  animation: rainbow 20s linear infinite;
}
.modules-right {
  padding-left: 10px;
  background-color: @source_color;
  border-radius: 0px;
  border-style: double;
  border-width: 2px;
  margin-bottom: 4px;
  margin-top: 3px;
  margin-right: 5px;
  box-shadow: 0px 0px 3px 2px shade(@source_color, 0.55);
  border-image-slice: 1;
  border-image-source: linear-gradient(90deg, @primary, @source_color, @secondary, @tertiary, @secondary_fixed_dim);
  animation: rainbow 20s linear infinite;
}

/* -----------------------------------------------------
 * Workspaces
 * ----------------------------------------------------- */

#workspaces {margin: 0px 10px 0px 3px}
#workspaces button {
    margin-right: 2px;
    border-radius: 50%;
    padding: 0 4px 0 4px;
    font-size: 14px;
    color: @primary;
    transition: background 0.3s;
    margin-bottom: 6px;
    box-shadow: 0px 3px 0px 0px shade(@source_color, 0.7);
}
#workspaces button.active {
    background: @primary_container;
    color: @primary;
    margin-bottom: 6px;
    box-shadow: 0px 3px 0px 0px shade(@primary_container, 0.5);
}
#workspaces button.active:hover {
    background: @primary_container;
    color: @primary;
    margin-top: 3px;
    margin-bottom: 3px;
    box-shadow: 0px 0px 0px 0px shade(@primary_container, 0.5);
}
#workspaces button:hover {
    background: @source_color;
    color: @primary;
    margin-top: 3px;
    margin-bottom: 3px;
    box-shadow: 0px 0px 0px 0px shade(@on_primary, 0.5);
}

/* -----------------------------------------------------
 * Tooltips
 * ----------------------------------------------------- */

tooltip {
    border-radius: 16px;
    background-color: @on_primary;
    opacity:0.9;
    padding:20px;
    margin:0px;
}

tooltip label {
    color: @textcolor2;
    background: @on_primary;
    background-color: @on_primary;
}

/* -----------------------------------------------------
 * Window
 * ----------------------------------------------------- */

#window {
    margin: 0px 15px 0px 0px;
    border-radius: 12px;
    color:@textcolor;
    font-size:14px;
    font-weight:normal;
}

window#waybar.empty #window {
    background-color:transparent;
}

/* -----------------------------------------------------
 * Modules
 * ----------------------------------------------------- */

.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

